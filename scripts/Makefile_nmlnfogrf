################################################################
# NML-specific targets and rules
################################################################

nfo: nml lng
	$(_E) "[NML] $(patsubst %.grf, %.nfo, $(GRF_FILE))"
	$(_E) $(NML) $(NML_FLAGS) --nfo $(patsubst %.grf, %.nfo, $(GRF_FILE)) $(NML_FILE)

grf $(GRF_FILE): nfo gfx
	$(_E) "[GRFCODEC] $(GRF_FILE)"
	$(_V) $(GRFCODEC) $(GRFCODEC_FLAGS) $(notdir $(GRF_FILE)) .

$(MD5_FILENAME) $(MD5_SRC_FILENAME): $(GRF_FILE)
	$(_E) "[MD5] $@"
	$(_V) $(MD5SUM) $< | sed "s/  / /;s/ /  /" > $@
md5: $(MD5_FILENAME)

################################################################
# Definitions which extend the common rules
################################################################
clean::
	$(_E) "[CLEAN GRF]"
	$(_V)-rm -rf $(GRF_FILE)
	$(_V)-rm -rf $(patsubst %.grf, %.nfo, $(GRF_FILE))
	$(_V)-rm -rf parsetab.py
	$(_V)-rm -rf $(MD5_FILENAME)

maintainer-clean::
	$(_E) "[MAINTAINER-CLEAN GRF]"
	$(_V) -rm -rf $(MD5_SRC_FILENAME)
