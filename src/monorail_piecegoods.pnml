/* 
 * ***************************
 * Piece goods wagon:
 *
 * goods, food, paper, fruits, fruit + vegetables,
 * farm supplies, engineering supplies, 
 * manufacturing supplies, wool
 * ***************************
 */

spriteset(monorail_piecegoods_default_open_set, "src/gfx/temperate_monolev.png") { tmpl_short_railwagon(0,200) }
spriteset(monorail_piecegoods_default_closed_set, "src/gfx/temperate_monolev.png") { tmpl_short_railwagon(0,220) }
spritegroup monorail_piecegoods_default_group {
	loaded: monorail_piecegoods_default_closed_set;
	loading: monorail_piecegoods_default_open_set;
}

spriteset(monorail_piecegoods_goods_arctic_open_set, "src/gfx/arctic_monolev.png") { tmpl_short_railwagon(0,200) }
spriteset(monorail_piecegoods_goods_arctic_closed_set, "src/gfx/arctic_monolev.png") { tmpl_short_railwagon(0,220) }
spritegroup monorail_piecegoods_goods_arctic_group {
	loaded: monorail_piecegoods_goods_arctic_closed_set;
	loading: monorail_piecegoods_goods_arctic_open_set;
}
spriteset(monorail_piecegoods_goods_tropic_open_set, "src/gfx/tropic_monolev.png") { tmpl_short_railwagon(0,120) }
spriteset(monorail_piecegoods_goods_tropic_closed_set, "src/gfx/tropic_monolev.png") { tmpl_short_railwagon(0,140) }
spritegroup monorail_piecegoods_goods_tropic_group {
	loaded: monorail_piecegoods_goods_tropic_closed_set;
	loading: monorail_piecegoods_goods_tropic_open_set;
}

spriteset(monorail_piecegoods_paper_open_set, "src/gfx/arctic_monolev.png") { tmpl_short_railwagon(0,360) }
spriteset(monorail_piecegoods_paper_closed_set, "src/gfx/arctic_monolev.png") { tmpl_short_railwagon(0,380) }
spritegroup monorail_piecegoods_paper_group {
	loaded: monorail_piecegoods_paper_closed_set;
	loading: monorail_piecegoods_paper_open_set;
}

spriteset(monorail_piecegoods_food_open_set, "src/gfx/tropic_monolev.png") { tmpl_short_railwagon(0,240) }
spriteset(monorail_piecegoods_food_closed_set, "src/gfx/tropic_monolev.png") { tmpl_short_railwagon(0,260) }
spritegroup monorail_piecegoods_food_group {
	loaded: monorail_piecegoods_food_closed_set;
	loading: monorail_piecegoods_food_open_set;
}

switch(FEAT_TRAINS, SELF, monorail_piecegoods_goods_climate_switch, climate) {
	CLIMATE_ARCTIC: monorail_piecegoods_goods_arctic_group;
	CLIMATE_TROPIC: monorail_piecegoods_goods_tropic_group;
	monorail_piecegoods_default_group;
}

switch(FEAT_TRAINS, SELF, monorail_piecegoods_cargo_switch, cargo_type_in_veh) {
	FOOD: monorail_piecegoods_food_group;
	GOOD: monorail_piecegoods_goods_climate_switch;
	PAPR: monorail_piecegoods_paper_group;
	monorail_piecegoods_default_group;
}

switch (FEAT_TRAINS, SELF, monorail_piecegoods_switch, current_callback) {
    VEH_CB_REFITTED_CAPACITY:  piecegoods_wagon_cb_capacity_switch; // use rail wagon properties
    VEH_CB_VEHICLE_PROPERTIES: piecegoods_wagon_cb_property_switch; // use rail wagon properties
    monorail_piecegoods_cargo_switch;
}

item(FEAT_TRAINS, monorail_piecegoods_wagon) {
    property {                                                // we re-use the default name + properties
        name:                           string(STR_NAME_COVERED_PIECE_GOODS_WAGON);
        REFIT_PROPERTIES_PIECE_GOODS
        WAGON_PROPERTIES_DEFAULT
        WAGON_PROPERTIES_MONORAIL_DEFAULT
        cost_factor:                    190;
        callback_flags:                 bitmask(VEH_CBF_REFITTED_CAPACITY);
        cargo_capacity:                 25;
        weight:                         21;
    }
    graphics {
        monorail_piecegoods_switch;
    }
}